@model IEnumerable<RequestedSchoolsViewModel>

@{
    ViewBag.Title = "Заявени училища";
}

@{
    int i = 1;
}


<h1 class="text-center">@ViewBag.Title</h1>
<br />
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Област</th>
            <th scope="col">Град</th>
            <th scope="col">Име на училище</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var school in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@school.District</td>
                <td>@school.PopulatedArea</td>
                <td>@school.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Schools" asp-action="Finish" asp-route-id="@school.Id" class="btn btn-success btn-sm ml-2" role="button" aria-pressed="true"><i class="fas fa-check"></i> Готово</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>