@model TotalUsersServiceModel

@{
    ViewBag.Title = "Потребители";
}

<div class="row justify-content-center">
    <div class="card mt-3 mb-3 text-center text-white w-75" style="background-color:orange">
        <div class="row">
            <div class="col-md-6 col-sm-12 mt-3 mb-3">
                <h5 class="display-6">Общо: @Model.TotalUsers</h5>
                <h5 class="display-6">Администратори: @Model.TotalSchoolAdmins</h5>
                <h5 class="display-6">За одобрение: @Model.PendingSchoolAdmins</h5>
            </div>
            <div class="col-md-6 col-sm-12 mt-3 mb-3">
                <h5 class="display-6">Учители: @Model.TotalTeachers</h5>
                <h5 class="display-6">Ученици: @Model.TotalStudents</h5>
                <h5 class="display-6">Без училище: @Model.TotalFreeUsers</h5>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center pt-3 pb-3">
    <a asp-area="Admin" asp-controller="Users" asp-action="SchoolAdmins" class="btn btn-outline-primary btn-sm ml-2" role="button" aria-pressed="true">Училищни администратори</a>
    <a asp-area="Admin" asp-controller="Users" asp-action="Pending" class="btn btn-outline-danger btn-sm ml-2" role="button" aria-pressed="true">Чакащи одобрение</a>
</div>