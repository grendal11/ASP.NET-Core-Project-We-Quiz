@model IEnumerable<PendingCategoryServiceModel>

@{
    ViewBag.Title = "Чакащи одобрение";
}

@{
    int i = 1;
}


<h1 class="text-center">@ViewBag.Title</h1>
<br />
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Категория</th>
            <th scope="col">Достъпност</th>
            <th scope="col">Основание</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@category.Name</td>
            @if (category.SchoolId != 0)
            {
                <td>@category.SchoolName</td>
            }
            else
            {
                <td>Достъпно за всички</td>
            }
            <td>@category.Description</td>
            <td>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Approve" asp-route-id="@category.Id" class="btn btn-success btn-sm ml-2" role="button" aria-pressed="true"><i class="fas fa-check"></i> Потвърди</a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Deny" asp-route-id="@category.Id" class="btn btn-danger btn-sm ml-2" role="button" aria-pressed="true"><i class="fas fa-trash-alt"></i> Откажи</a>
            </td>
        </tr>
            i++;
        }
    </tbody>
</table>