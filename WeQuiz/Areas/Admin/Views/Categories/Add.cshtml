@model CategoryFormModel

@{
    ViewBag.Title = "Нова категория";
}

<h1 class="text-center" ->@ViewBag.Title</h1>
<br />
<form method="post" class="col-lg-6 offset-lg-3 col-sm-12 col-md-8 offset-md-2">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="name">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SchoolId"></label>
        <input asp-for="SchoolId" class="form-control" id="name">
        <span class="small text-danger">Въведете 0 за публична категория</span>
    </div>
    <input class="btn btn-primary" type="submit" value="Запиши" />
</form>
