@model ProfileFormModel

@{
    ViewBag.Title = "Редактиране на профил";
}

<h1 class="text-center" ->@ViewBag.Title</h1>
<br />
<form method="post" class="col-lg-6 offset-lg-3 col-sm-12 col-md-8 offset-md-2">
    <div class="form-group">
        <label asp-for="Alias"></label>
        <input asp-for="Alias" class="form-control" id="name">
        <span class="small text-danger">Ако полето е празно ще се запази старото име.</span>
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" id="name">
        <span class="small text-danger">Ако полето е празно ще се запази старото име.</span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" id="name">
        <span class="small text-danger">Ако полето е празно ще се запази стария телефонен номер.</span>
    </div>
    <input class="btn btn-primary" type="submit" value="Запиши" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}