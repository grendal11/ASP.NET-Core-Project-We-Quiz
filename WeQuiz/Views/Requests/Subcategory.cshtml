@model SubcategoryRequestFormModel

@{
    ViewBag.Title = "Заяви подкатегория за въпроси";
}

<h1 class="text-center" ->@ViewBag.Title</h1>
<br />
<form method="post" class="col-lg-6 offset-lg-3 col-sm-12 col-md-8 offset-md-2">
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="name">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" id="name">
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="IsPrivate">
                <input asp-for="IsPrivate" />
                @Html.DisplayNameFor(m => m.IsPrivate)
            </label>
        </div>
    </div>
    <input class="btn btn-primary" type="submit" value="Подай заявка" />
</form>
