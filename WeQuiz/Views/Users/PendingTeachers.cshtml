@model IEnumerable<PendingTeacherServiceModel>

@{
    ViewBag.Title = "Чакащи одобрение учители";
}

@{
    int i = 1;
}


<h1 class="text-center">@ViewBag.Title</h1>
<br />
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Име на потребител</th>
            <th scope="col">E-mail адрес</th>
            <th scope="col">Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
        <tr>
            <th scope="row">@i</th>
            <td>@teacher.FullName</td>
            <td>@teacher.UserEmail</td>
            <td>
                <a asp-area="" asp-controller="Users" asp-action="ApproveTeacher" asp-route-id="@teacher.Id" class="btn btn-success btn-sm ml-2" role="button" aria-pressed="true"><i class="fas fa-check"></i> Потвърди</a>
                <a asp-area="" asp-controller="Users" asp-action="DenyTeacher" asp-route-id="@teacher.Id" class="btn btn-danger btn-sm ml-2" role="button" aria-pressed="true"><i class="fas fa-trash-alt"></i> Откажи</a>
            </td>
        </tr>
            i++;
        }
    </tbody>
</table>